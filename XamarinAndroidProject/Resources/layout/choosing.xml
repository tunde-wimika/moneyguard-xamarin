<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Username EditText -->

    
        <!-- Login Button -->
    <Button
        android:id="@+id/buttonCredentialCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credential Check" />

        <!-- Login Button -->
    <Button
        android:id="@+id/buttonDebitCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debit Check" />


    <!-- Login Button -->
    <Button
        android:id="@+id/buttonGetRiskProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Risk Profile" />

        <!-- Login Button -->
    <Button
        android:id="@+id/buttonTypingProfileMatching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match Typing Profile" />

</LinearLayout>
